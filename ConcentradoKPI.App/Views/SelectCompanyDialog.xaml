<Window x:Class="ConcentradoKPI.App.Views.SelectCompanyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Elegir compañía" Width="380" Height="180"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="¿Qué archivo deseas guardar?"
                   FontWeight="SemiBold" Margin="0,0,0,8"/>

        <ComboBox x:Name="Cmb"
                  Grid.Row="1"
                  DisplayMemberPath="Name"
                  MinWidth="320"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Aceptar" Width="90" Margin="0,0,8,0"
                    IsDefault="True" Click="Accept_Click"/>
            <Button Content="Cancelar" Width="90"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
