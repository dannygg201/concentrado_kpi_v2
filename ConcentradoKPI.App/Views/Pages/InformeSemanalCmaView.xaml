<UserControl x:Class="ConcentradoKPI.App.Views.InformeSemanalCmaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ConcentradoKPI.App.ViewModels"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <!-- 🎨 Recursos -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="Col_Navy"   Color="#021A4B"/>
        <SolidColorBrush x:Key="Col_Card"   Color="White"/>
        <SolidColorBrush x:Key="Col_Border" Color="#E5E8EC"/>
        <SolidColorBrush x:Key="Col_Muted"  Color="#6B7280"/>

        <!-- Tarjeta base -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col_Card}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="StatPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="StatNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Col_Muted}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- Input base -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Solo lectura -->
        <Style x:Key="ReadOnlyRoundedTextBox"
               TargetType="TextBox"
               BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Tarjeta CONTRATISTA ===== -->
        <DataTemplate x:Key="CardEditableTemplate">
            <Border Style="{StaticResource Card}" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="Contratista" FontSize="18" FontWeight="Black" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Columna izquierda -->
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Lista de contratistas"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Téc./Prof. Seguridad"/>
                            <TextBox Style="{StaticResource ReadOnlyRoundedTextBox}"
                                     Text="{Binding TecnicosSeguridad, Mode=OneWay}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="No. Colaboradores"/>
                            <TextBox Style="{StaticResource ReadOnlyRoundedTextBox}"
                                     Text="{Binding Colaboradores, Mode=OneWay}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Horas trabajadas"/>
                            <TextBox Style="{StaticResource ReadOnlyRoundedTextBox}"
                                     Text="{Binding HorasTrabajadas, Mode=OneWay}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Incidentes"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding Incidentes, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Prec. SIF - Comportamiento"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding PrecursoresSifComportamiento, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Prec. SIF - Condición"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding PrecursoresSifCondicion, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Condiciones detectadas"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding Detectadas, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Condiciones corregidas"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding Corregidas, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Total semanal (auto)"/>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding TotalSemanal}"/>
                        </StackPanel>

                        <!-- Columna derecha -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Especialidad"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding Especialidad, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="LTI"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding LTI, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="MDI"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding MDI, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="MTI"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding MTI, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="TRI"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding TRI, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="FAI"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding FAI, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Actos inseguros"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding ActosInseguros, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Style="{StaticResource FieldLabel}" Text="Actos seguros"/>
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding ActosSeguros, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Seguros/Inseguros -->
                    <Grid Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource StatPill}" Background="#ECFDF5" BorderBrush="#BBF7D0">
                            <DockPanel LastChildFill="True">
                                <Ellipse Width="10" Height="10" Fill="#22C55E" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Seguros" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding ActosSeguros}" Style="{StaticResource StatNumber}" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource StatPill}" Background="#FEF2F2" BorderBrush="#FECACA">
                            <DockPanel LastChildFill="True">
                                <Ellipse Width="10" Height="10" Fill="#EF4444" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Inseguros" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding ActosInseguros}" Style="{StaticResource StatNumber}" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Avance -->
                    <StackPanel Margin="0,12,0,0">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="% Avance" Style="{StaticResource FieldLabel}" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding PorcentajeAvance, StringFormat={}{0:P0}}"
                                       FontWeight="Bold" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <ProgressBar Minimum="0" Maximum="1"
                                     Value="{Binding PorcentajeAvance, Mode=OneWay}" Height="10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- ===== Tarjeta TOTALES ===== -->
        <DataTemplate x:Key="CardTotalesTemplate">
            <Border Style="{StaticResource Card}" HorizontalAlignment="Stretch" Width="550"
                    Background="#FBFCFE" BorderBrush="#E0E6F1">
                <StackPanel>
                    <TextBlock Text="Totales" FontWeight="Black" FontSize="16"/>
                    <Separator Margin="0,8,0,10"/>
                    <UniformGrid Rows="10" Columns="2" Margin="0,0,0,6">
                        <TextBlock Text="Téc. Seguridad"/>
                        <TextBlock Text="{Binding TecnicosSeguridad}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Colaboradores"/>
                        <TextBlock Text="{Binding Colaboradores}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Horas trabajadas"/>
                        <TextBlock Text="{Binding HorasTrabajadas}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Incidentes"/>
                        <TextBlock Text="{Binding Incidentes}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Prec. SIF - Comp."/>
                        <TextBlock Text="{Binding PrecursoresSifComportamiento}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Prec. SIF - Cond."/>
                        <TextBlock Text="{Binding PrecursoresSifCondicion}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Cond. detectadas"/>
                        <TextBlock Text="{Binding Detectadas}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Cond. corregidas"/>
                        <TextBlock Text="{Binding Corregidas}" FontWeight="Bold" HorizontalAlignment="Right"/>

                        <TextBlock Text="Actos (S / I)"/>
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Right">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} / {1}">
                                    <Binding Path="ActosSeguros"/>
                                    <Binding Path="ActosInseguros"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock Text="Total semanal"/>
                        <TextBlock Text="{Binding TotalSemanal}" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Contenido -->
    <Grid Background="#F6F7FB">
        <Grid Margin="12">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl>
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource CardEditableTemplate}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource CardTotalesTemplate}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                                <ContentControl.Content>
                                    <Binding/>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
