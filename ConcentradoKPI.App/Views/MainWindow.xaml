<Window x:Class="ConcentradoKPI.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ConcentradoKPI.App.ViewModels"
        xmlns:models="clr-namespace:ConcentradoKPI.App.Models"
        xmlns:controls="clr-namespace:ConcentradoKPI.App.Views.Controls"
        xmlns:conv="clr-namespace:ConcentradoKPI.App.Converters"
        Title="Smart KPI" Width="1100" Height="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:EnumToViewConverter x:Key="EnumToView"/>

        <!-- Paleta -->
        <SolidColorBrush x:Key="Col.Navy" Color="#11254a"/>
        <SolidColorBrush x:Key="Col.Navy.Dark" Color="#0B1E3A"/>
        <SolidColorBrush x:Key="Col.White" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Col.White.12" Color="#1FFFFFFF"/>
        <SolidColorBrush x:Key="Col.White.24" Color="#3DFFFFFF"/>

        <!-- Botón tipo “ghost” para topbar oscuro -->
        <Style x:Key="TopBarGhostButton" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource Col.White}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.White.12}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="4,0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource Col.White.12}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Col.White.24}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource Col.White.24}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Contenido con icono MDL2 + texto -->
        <DataTemplate x:Key="BtnContent.Open">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                <TextBlock Text="Abrir"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="BtnContent.SaveAs">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                <TextBlock Text="Guardar como"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- TOP BAR (Grid de 3 columnas para centrar SplashScreen) -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#11254a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Izquierda -->
                <ColumnDefinition Width="*"/>
                <!-- Centro -->
                <ColumnDefinition Width="Auto"/>
                <!-- Derecha -->
            </Grid.ColumnDefinitions>

            <!-- IZQUIERDA: Logos 1 y 2 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Image Source="/Assets/modelo_blanco.png"
                       Height="44" Stretch="Uniform"
                       VerticalAlignment="Center" Margin="0,0,10,0"
                       ToolTip="Logo 1"/>
                <Image Source="/Assets/ABI_Logo.png"
                       Height="44" Stretch="Uniform"
                       VerticalAlignment="Center" Margin="0,0,10,0"
                       ToolTip="Logo 2"/>
            </StackPanel>

            <!-- CENTRO: SplashScreen centrado -->
            <Image Grid.Column="1"
                   Source="/Assets/SplashScreen.png"
                   Height="48" Stretch="Uniform"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   ToolTip="Splash"/>

           <!-- DERECHA: Logo 3 + botones -->
<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
    <Image Source="/Assets/top_tres.png"
           Height="40" Stretch="Uniform"
           VerticalAlignment="Center" Margin="0,0,10,0"
           ToolTip="Logo 3"/>

    <!-- ABRIR: hereda de TopBarGhostButton y añade habilitación condicional -->
    <Button Margin="4" Command="{Binding ImportCommand}">
        <Button.Style>
            <Style TargetType="Button" BasedOn="{StaticResource TopBarGhostButton}">
                <Setter Property="ContentTemplate" Value="{StaticResource BtnContent.Open}"/>
                <Setter Property="IsEnabled" Value="False"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Companies.Count}" Value="0">
                        <Setter Property="IsEnabled" Value="True"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
    </Button>

    <!-- GUARDAR COMO: hereda de TopBarGhostButton sin triggers adicionales -->
    <Button Margin="4" Command="{Binding ExportCommand}">
        <Button.Style>
            <Style TargetType="Button" BasedOn="{StaticResource TopBarGhostButton}">
                <Setter Property="ContentTemplate" Value="{StaticResource BtnContent.SaveAs}"/>
            </Style>
        </Button.Style>
    </Button>
</StackPanel>
        </Grid>

        <!-- SIDEBAR -->
        <Grid Grid.Row="1" Grid.Column="0" Background="#F7F7F7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Compañías"
                       Margin="16,16,16,8"
                       FontWeight="SemiBold"
                       FontSize="14"/>

            <Border Grid.Row="1" Margin="12"
                    BorderBrush="#DDD" BorderThickness="1" CornerRadius="6"
                    Background="White">
                <Grid MinHeight="260" Height="Auto">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <TreeView SelectedItemChanged="TreeView_SelectedItemChanged"
                                  Margin="8">

                            <!-- ContextMenus -->
                            <TreeView.Resources>
                                <ContextMenu x:Key="CompanyMenu" Opened="CompanyMenu_Opened">
                                    <MenuItem Header="➕ Agregar proyecto"
                                              Command="{Binding PlacementTarget.Tag.AddProjectCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="✏️ Renombrar compañía"
                                              Command="{Binding PlacementTarget.Tag.RenameCompanyCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="❌ Cerrar archivo"
                                              Command="{Binding PlacementTarget.Tag.DeleteCompanyCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>

                                <ContextMenu x:Key="ProjectMenu" Opened="ProjectMenu_Opened">
                                    <MenuItem Header="➕ Agregar semana"
                                              Command="{Binding PlacementTarget.Tag.AddWeekCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="✏️ Renombrar proyecto"
                                              Command="{Binding PlacementTarget.Tag.RenameProjectCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="🗑️ Eliminar proyecto"
                                              Command="{Binding PlacementTarget.Tag.DeleteProjectCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>

                                <ContextMenu x:Key="WeekMenu" Opened="WeekMenu_Opened">
                                    <MenuItem Header="✏️ Editar semana"
                                              Command="{Binding PlacementTarget.Tag.RenameWeekCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="🗑️ Eliminar semana"
                                              Command="{Binding PlacementTarget.Tag.DeleteWeekCommand,
                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </TreeView.Resources>

                            <TreeView.ItemsSource>
                                <Binding Path="Companies"/>
                            </TreeView.ItemsSource>

                            <TreeView.ItemTemplate>
                                <!-- Nivel 1: Compañía -->
                                <HierarchicalDataTemplate DataType="{x:Type models:Company}"
                                                          ItemsSource="{Binding Projects}">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                               Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                               ContextMenu="{StaticResource CompanyMenu}"/>
                                    <!-- Nivel 2: Proyecto -->
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <HierarchicalDataTemplate DataType="{x:Type models:Project}"
                                                                  ItemsSource="{Binding Weeks}">
                                            <TextBlock Text="{Binding Name}"
                                                       Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                       ContextMenu="{StaticResource ProjectMenu}"/>
                                            <!-- Nivel 3: Semana -->
                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:WeekData}">
                                                    <TextBlock
                                                        Text="{Binding WeekNumber, StringFormat=Semana {0}}"
                                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                        ContextMenu="{StaticResource WeekMenu}"/>
                                                </DataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>

                            <!-- Selección con clic derecho -->
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <EventSetter Event="PreviewMouseRightButtonDown"
                                                 Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                                </Style>
                            </TreeView.ItemContainerStyle>

                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Botones fijos -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="12,0,12,12">
                <Button Content="➕ Agregar compañía"
                        Margin="0,6,0,0"
                        Command="{Binding AddCompanyCommand}"
                        HorizontalContentAlignment="Left"
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="IsEnabled" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Companies.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="➕ Agregar proyecto a la compañía seleccionada"
                        Margin="0,6,0,0"
                        Command="{Binding AddProjectCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="➕ Agregar semana al proyecto seleccionado"
                        Margin="0,6,0,0"
                        Command="{Binding AddWeekCommand}"
                        HorizontalContentAlignment="Left"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Detalle + botón Abrir -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,8,0,12">
                <TextBlock Text="Detalle" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="Compañía:"/>
                <TextBlock Text="{Binding SelectedCompany.Name, TargetNullValue=—}" FontWeight="SemiBold"/>

                <TextBlock Text="Proyecto:" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding SelectedProject.Name, TargetNullValue=—}" FontWeight="SemiBold"/>

                <TextBlock Text="Semana:" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding SelectedWeek.WeekNumber, TargetNullValue=—}" FontWeight="SemiBold"/>

                <Button Margin="0,12,0,0"
                        Padding="12,6"
                        HorizontalAlignment="Left"
                        Command="{Binding OpenPersonalCommand}">
                    <TextBlock>
                        <Run Text="Abrir "/>
                        <Run Text="Semana "/>
                        <Run Text="{Binding SelectedWeek.WeekNumber}"/>
                    </TextBlock>
                </Button>
            </StackPanel>

            <!-- Tarjeta de Preview -->
            <Border Grid.Row="1" Padding="12" Margin="0,0,0,12"
                    BorderBrush="#E5E5E5" BorderThickness="1" CornerRadius="8" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Vista previa — Personal vigente"
                               FontSize="16" FontWeight="Bold" Foreground="#021A4B"/>

                    <!-- Mensaje cuando no hay datos -->
                    <TextBlock Grid.Row="2"
                               Text="Abre un archivo (.kpi.json) o selecciona una compañía/proyecto/semana para ver la vista previa."
                               FontSize="14" Foreground="#666" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Companies.Count}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Companies.Count}" Value="1"/>
                                            <Condition Binding="{Binding SelectedWeek}" Value="{x:Null}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Host de la preview -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ContentControl x:Name="PreviewHost"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
