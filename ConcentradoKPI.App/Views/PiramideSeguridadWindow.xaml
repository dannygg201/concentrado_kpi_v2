<Window x:Class="ConcentradoKPI.App.Views.PiramideSeguridadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ConcentradoKPI.App.ViewModels"
        xmlns:controls="clr-namespace:ConcentradoKPI.App.Views.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pirámide de Seguridad" Width="1100" Height="690"
        WindowStartupLocation="CenterScreen" Background="#F6F7FB">

    <Window.Resources>
        <vm:ShellViewModel x:Key="Shell"/>

        <!-- Recuadro blanco reutilizable -->
        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>

        <!-- TOP: barra azul + NavBar -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <!-- Nueva barra superior reutilizable -->
            <controls:TopBar Title="Piramide de seguridad"/>
            <!-- NavBar global -->
            <controls:NavBar DataContext="{StaticResource Shell}"/>
        </StackPanel>

        <!-- Contenido -->
        <Grid Grid.Row="1" Margin="10,10,10,10" Grid.RowSpan="3">
            <!-- Escala uniforme -->
            <Viewbox Stretch="Uniform">
                <!-- Área base 1920x1080 para arrastrar a mano en el diseñador -->
                <Canvas Width="1920" Height="1080" d:DesignWidth="1920" d:DesignHeight="1080">
                    <!-- Fondo como elemento (permite arrastrar controles) -->
                    <Image Source="pack://application:,,,/Assets/piramide_limpia.png"
                           d:Source="/Assets/piramide_limpia.png"
                           Width="1920" Height="1080" Stretch="Fill"
                           IsHitTestVisible="False" Panel.ZIndex="0"/>
                    <!-- ===== Without LTI ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="55" Canvas.Top="20">
                        <TextBlock Text="Without LTI" 
                            FontSize="30" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== IZQUIERDA (Without LTI) ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="10" Canvas.Top="70" Width="250">
                        <Border Style="{StaticResource Badge}">
                            <StackPanel>
                                <TextBlock Text="{Binding WithoutLTIs}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== Last Record ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="55" Canvas.Top="130">
                        <TextBlock Text="Last Record" 
                            FontSize="30" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== IZQUIERDA (Last Record) ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="10" Canvas.Top="170" Width="250">
                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding LastRecord}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ===== DERECHA (4 tarjetas) ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1650" Canvas.Top="100" Width="250">
                        <Border Style="{StaticResource Badge}">
                            <StackPanel>
                                <TextBlock Text="Compañías" FontSize="16" Foreground="#666" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Companias}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="No. Colaboradores" FontSize="16" Foreground="#666" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Colaboradores}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="No. Técnicos de Seguridad" FontSize="16" Foreground="#666" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TecnicosSeguridad}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Horas Trabajadas" FontSize="16" Foreground="#666" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding HorasTrabajadas}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>









                    <!-- Seguros / Inseguros -->
                    <Border Style="{StaticResource Badge}" Panel.ZIndex="1"
                            Canvas.Left="380" Canvas.Top="840" Width="120" Height="60" DataContext="{Binding Seguros}">
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                    </Border>
                    <!-- ===== Textbox Inseguros ===== -->
                    <Border Style="{StaticResource Badge}" Panel.ZIndex="1"
                            Canvas.Left="670" Canvas.Top="840" Width="120" Height="60" DataContext="{Binding Inseguros}">
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                    </Border>
                    <!-- ===== Base: PROGRAMA DE BIENESTAR ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="170" Canvas.Top="940">
                        <TextBlock Text="PROGRAMA DE BIENESTAR" FontSize="45" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Base: TERRITORIOS ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="820" Canvas.Top="970">
                        <TextBlock Text="TERRITORIOS" FontSize="45" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Base: Territorios_Monitoreo Integral ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="1256" Canvas.Top="930">
                        <TextBlock Text="Territorios     Monitoreo Integral" FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Territorios: dos filas (rojo / verde) -->
                    <!-- Fila 1: rojo -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1256" Canvas.Top="980" Orientation="Horizontal">
                        <Border Width="36" Height="36" CornerRadius="6"
            Background="Red" BorderBrush="White" BorderThickness="4"
            Margin="0,0,8,0"/>
                        <Border Width="115" Height="36" CornerRadius="6" Background="White"
            DataContext="{Binding TerritoriosRojo}">
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                        </Border>
                    </StackPanel>

                    <!-- Fila 2: verde -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1256" Canvas.Top="1025" Orientation="Horizontal">
                        <Border Width="36" Height="36" CornerRadius="6"
            Background="#00B050" BorderBrush="White" BorderThickness="4"
            Margin="0,0,8,0"/>
                        <Border Width="115" Height="36" CornerRadius="6" Background="White"
            DataContext="{Binding TerritoriosVerde}">
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                        </Border>
                    </StackPanel>


                    <!-- ===== Base: Avance al Programa % ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="170" Canvas.Top="1000">
                        <TextBlock Text="Avance al Programa" FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource Badge}" Margin="12,0,6,0" Width="100" Height="44" DataContext="{Binding AvanceProgramaPct}">
                            <TextBlock Text="{Binding}" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0B2245"/>
                        </Border>
                        <TextBlock Text="%" FontSize="28" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Base: Efectividad ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="1465" Canvas.Top="1000">
                        <TextBlock Text="Efectividad" FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource Badge}" Margin="12,0,6,0" Width="100" Height="44" DataContext="{Binding Efectividad}">
                            <TextBlock Text="{Binding}" FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0B2245"/>
                        </Border>
                    </StackPanel>
                    <!-- ===== Seguros_Inseguros ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="245" Canvas.Top="845">
                        <TextBlock Text="Seguros              Inseguros" FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Comportamientos_Condiciones ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="400" Canvas.Top="765">
                        <TextBlock Text="Comportamientos                                                             Condiciones" 
                                   FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Detectadas_Corregidas_Avance ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="1148" Canvas.Top="803">
                        <TextBlock Text="Detectadas           Corregidas              Avance" 
               FontSize="25" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== YTD_MTH ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="380" Canvas.Top="180">
                        <TextBlock Text="YTD                                                 MTH" 
                                   FontSize="65" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Detectadas / Corregidas / Avance -->
                    <Border Style="{StaticResource Badge}" Panel.ZIndex="1"
                        Canvas.Left="1150" Canvas.Top="840" Width="120" Height="60" DataContext="{Binding Detectadas}">
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                    </Border>
                    <Border Style="{StaticResource Badge}" Panel.ZIndex="1"
                        Canvas.Left="1350" Canvas.Top="840" Width="120" Height="60" DataContext="{Binding Corregidas}">
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                    </Border>
                    <Border Style="{StaticResource Badge}" Panel.ZIndex="1"
                        Canvas.Left="1550" Canvas.Top="840" Width="120" Height="60" DataContext="{Binding Avance}">
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="18" FontWeight="SemiBold" Foreground="#0B2245"/>
                    </Border>
                    <!-- ===== Incidentes ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="60" Canvas.Top="620">
                        <TextBlock Text="INCIDENTES" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Incidentes ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="60" Canvas.Top="670">
                        <TextBlock Text="SIN LESIÓN" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== FAI ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="410" Canvas.Top="460">
                        <TextBlock Text="FAI" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== MTI ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="530" Canvas.Top="300">
                        <TextBlock Text="MTI" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== MDI ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="630" Canvas.Top="180">
                        <TextBlock Text="MDI" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== LTI ===== -->
                    <StackPanel Panel.ZIndex="10" Orientation="Horizontal" Canvas.Left="780" Canvas.Top="40">
                        <TextBlock Text="LTI" 
                            FontSize="45" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Precursores, Potenciales TxtBox ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="905" Canvas.Top="625" Width="100">
                        <Border Style="{StaticResource Badge}">
                            <StackPanel>
                                <TextBlock Text="{Binding Potenciales}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Panel.ZIndex="1" Canvas.Left="905" Canvas.Top="720" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding Precursores3}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Panel.ZIndex="1" Canvas.Left="850" Canvas.Top="830" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding Precursores1}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Panel.ZIndex="1" Canvas.Left="970" Canvas.Top="830" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding Precursores2}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== Precursores ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="865" Canvas.Top="685">
                        <TextBlock Text="Precursores" 
                            FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Precursores ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="865" Canvas.Top="795">
                        <TextBlock Text="Precursores" 
                            FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Potenciales ===== -->
                    <StackPanel Panel.ZIndex="1" Orientation="Horizontal" Canvas.Left="870" Canvas.Top="575">
                        <TextBlock Text="Potenciales" 
                            FontSize="35" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- ===== Incidentes sin lesion 1 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="550" Canvas.Top="640" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding IncidentesSinLesion1}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== Incidentes sin lesion 2 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1250" Canvas.Top="640" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding IncidentesSinLesion2}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== FAI 1 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="650" Canvas.Top="470" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding FAI1}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== FAI 2 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="905" Canvas.Top="470" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding FAI2}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== FAI 3 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1170" Canvas.Top="470" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding FAI3}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MTI 1 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="730" Canvas.Top="310" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MTI1}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MTI 2 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="913" Canvas.Top="310" Width="91">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MTI2}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MTI 3 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1090" Canvas.Top="310" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MTI3}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MDI 1 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="800" Canvas.Top="175" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MDI1}" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MDI 2 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="934" Canvas.Top="175" Width="50">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MDI2}" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== MDI 3 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="1020" Canvas.Top="175" Width="100">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding MDI3}" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== LTI 1 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="880" Canvas.Top="75" Width="50">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding LTI1}" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== LTI 2 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="934" Canvas.Top="75" Width="50">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding LTI2}" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- ===== LTI 3 ===== -->
                    <StackPanel Panel.ZIndex="1" Canvas.Left="988" Canvas.Top="75" Width="50">

                        <Border Style="{StaticResource Badge}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding LTI3}" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Canvas>
            </Viewbox>
            <!-- Capa overlay: botón flotante -->
            <Button Content="✏️ Editar datos"
            Width="150" Height="36"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,8,8,0"
            Click="EditarDatos_Click"/>
        </Grid>
    </Grid>
</Window>
