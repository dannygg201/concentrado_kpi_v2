<UserControl x:Class="ConcentradoKPI.App.Views.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root" Height="44">
    <DockPanel Background="#11254a" LastChildFill="False">
        <!-- Título: primero usa DP Title; si está vacío, usa Window.Title -->
        <TextBlock Margin="16,0"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left">
            <Run>
                <Run.Text>
                    <PriorityBinding>
                        <Binding ElementName="Root" Path="Title"/>
                        <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="Title"/>
                    </PriorityBinding>
                </Run.Text>
            </Run>
            <Run Text=" — " />
            <!-- Company -->
            <Run Text="{Binding DataContext.Company.Name,
                                RelativeSource={RelativeSource AncestorType=Window},
                                TargetNullValue=''}"/>
            <Run Text=" — Proyecto: " />
            <!-- Project -->
            <Run Text="{Binding DataContext.Project.Name,
                                RelativeSource={RelativeSource AncestorType=Window},
                                TargetNullValue=''}"/>
            <Run Text=" | Semana " />
            <!-- Week -->
            <Run Text="{Binding DataContext.Week.WeekNumber,
                                RelativeSource={RelativeSource AncestorType=Window},
                                TargetNullValue=''}"/>
        </TextBlock>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0">
            <Button Content="Guardar" Margin="4" Padding="12,6"
                    Command="ApplicationCommands.Save"/>
            <Button Content="Salir" Margin="4" Padding="12,6"
                    Click="Salir_Click"/>
        </StackPanel>
    </DockPanel>
</UserControl>
