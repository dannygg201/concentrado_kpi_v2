<Window x:Class="ConcentradoKPI.App.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingrese un nombre" Width="380" Height="170"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="LblPrompt" Text="Nombre:" Margin="0,0,0,8"/>
        <TextBox x:Name="TxtValue" Grid.Row="1" Height="28"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancelar" IsCancel="True" Width="90" Margin="0,0,8,0"/>
            <Button Content="Aceptar" IsDefault="True" Width="90" Click="OnOk"/>
        </StackPanel>
    </Grid>
</Window>
